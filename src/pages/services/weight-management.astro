---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';

const features = [
  'Comprehensive health assessment and medical history review',
  'Personalised nutrition and exercise planning with doctor-led lifestyle medicine focus',
  'Lifestyle coaching and behavioural therapy for sustainable habit formation',
  'Medical interventions when clinically appropriate and prescribed by qualified doctors',
  'Regular progress monitoring with lifestyle medicine plan adjustments',
  'Ongoing doctor-led support and accountability for long-term success',
  'Unlimited messaging support with medical team 9-5 weekdays'
];

const treatmentOptions = [
  {
    name: 'Lifestyle Medicine Assessment',
    description: 'Comprehensive evaluation of diet, exercise, sleep, and stress factors affecting weight',
    benefits: ['Personalized nutrition plans', 'Exercise prescription', 'Behavioral change support', 'Medical supervision', 'Unlimited messaging support 9-5 weekdays']
  },
  {
    name: 'Medical Weight Management',
    description: 'Evidence-based medical interventions including weight loss medications when clinically appropriate and prescribed by qualified doctors based on individual consultation outcomes',
    benefits: ['Prescription medications when needed', 'Regular monitoring', 'Side effect management', 'Ongoing medical support', 'Unlimited messaging support 9-5 weekdays']
  }
];
---

<Layout title="Doctor-Led Lifestyle Medicine Weight Management for Men Over 35 | Vital Health NZ" description="Doctor-led weight management combining lifestyle medicine with medical assessment. Specialized care for men over 35 facing midlife weight challenges, hormone changes, and metabolic issues.">
  <Navigation />
  
  <!-- Hero Section -->
  <section class="bg-gradient-primary section-padding">
    <div class="container-max text-center">
      <div class="inline-block bg-primary-100 text-primary-800 px-4 py-2 rounded-full text-sm font-semibold mb-6">
        üè• Doctor-Led Lifestyle Medicine
      </div>
      <h1 class="text-4xl lg:text-6xl font-bold text-neutral-900 mb-8 leading-tight">
        Comprehensive Weight Management with <span class="text-primary-600">Lifestyle Medicine</span>
      </h1>
      <p class="text-xl lg:text-2xl text-neutral-600 max-w-4xl mx-auto leading-loose">
        Evidence-based weight management combining comprehensive lifestyle medicine with medical supervision. 
        MCNZ registered doctors providing integrated care that addresses the root causes of weight challenges through sustainable lifestyle changes and medical support when clinically appropriate.
      </p>
      
      <!-- Key stats -->
      <div class="grid grid-cols-3 gap-4 mt-8">
        <div class="text-center">
          <div class="text-2xl font-bold text-primary-600">Evidence-Based</div>
          <div class="text-sm text-neutral-600">Medical approach</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-primary-600">$195 + GST</div>
          <div class="text-sm text-neutral-600">comprehensive 25-minute session plus unlimited messaging support with our medical team during business hours (9-5 weekdays) for one month</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-primary-600">MCNZ Registered</div>
          <div class="text-sm text-neutral-600">Qualified doctors</div>
        </div>
      </div>
      <div class="mt-8">
        <a href="/contact" class="btn-accent text-lg px-8 py-4">
          Book Your Consultation
        </a>
      </div>
      
      <!-- Medical Disclaimer -->
      <div class="mt-8 bg-amber-50 border-l-4 border-amber-500 p-6 rounded-lg">
        <p class="text-sm text-amber-800">
          <strong>Important Medical Disclaimer:</strong> This service provides medical consultations and lifestyle medicine support. 
          Any prescription medications require a proper medical consultation and are only prescribed when clinically appropriate. 
          Individual results vary and are not guaranteed.
        </p>
      </div>
    </div>
  </section>

  <!-- What's Included -->
  <section class="section-padding bg-white">
    <div class="container-max">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-bold text-neutral-900 mb-4">
          What's Included in Your Program
        </h2>
        <p class="text-xl text-neutral-600 max-w-3xl mx-auto">
          A comprehensive approach to weight management that combines medication with lifestyle medicine to address all aspects of your health and build sustainable habits
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {features.map((feature) => (
          <div class="flex items-start space-x-4">
            <div class="w-8 h-8 bg-primary-100 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
              <svg class="w-5 h-5 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
            </div>
            <span class="text-lg text-neutral-700">{feature}</span>
          </div>
        ))}
        
        <!-- Pricing callout -->
        <div class="mt-8 p-6 bg-primary-50 rounded-xl text-center">
          <h3 class="text-xl font-bold text-neutral-900 mb-4">Transparent Pricing</h3>
          <div class="text-lg font-semibold text-primary-600 mb-2">All Consultations</div>
          <div class="text-2xl font-bold text-neutral-900 mb-2">$195 + GST</div>
          <div class="text-sm text-neutral-600 max-w-lg mx-auto">comprehensive 25-minute session plus unlimited messaging support with our medical team during business hours (9-5 weekdays) for one month</div>
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works -->
  <section class="section-padding bg-white">
    <div class="container-max">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-bold text-neutral-900 mb-4">
          How Our Weight Management Program Works
        </h2>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="w-20 h-20 bg-primary-600 rounded-full flex items-center justify-center mx-auto mb-6">
            <span class="text-3xl font-bold text-white">1</span>
          </div>
          <h3 class="text-xl font-bold text-neutral-900 mb-3">Assessment</h3>
          <p class="text-neutral-600">Comprehensive health evaluation and goal setting</p>
        </div>
        
        <div class="text-center">
          <div class="w-20 h-20 bg-primary-600 rounded-full flex items-center justify-center mx-auto mb-6">
            <span class="text-3xl font-bold text-white">2</span>
          </div>
          <h3 class="text-xl font-bold text-neutral-900 mb-3">Plan</h3>
          <p class="text-neutral-600">Personalized nutrition, exercise, and medication plan</p>
        </div>
        
        <div class="text-center">
          <div class="w-20 h-20 bg-primary-600 rounded-full flex items-center justify-center mx-auto mb-6">
            <span class="text-3xl font-bold text-white">3</span>
          </div>
          <h3 class="text-xl font-bold text-neutral-900 mb-3">Support</h3>
          <p class="text-neutral-600">Ongoing coaching and progress monitoring</p>
        </div>
        
        <div class="text-center">
          <div class="w-20 h-20 bg-primary-600 rounded-full flex items-center justify-center mx-auto mb-6">
            <span class="text-3xl font-bold text-white">4</span>
          </div>
          <h3 class="text-xl font-bold text-neutral-900 mb-3">Success</h3>
          <p class="text-neutral-600">Achieve and maintain your weight loss goals</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section-padding bg-primary-600">
    <div class="container-max text-center">
      <h2 class="text-3xl lg:text-4xl font-bold text-white mb-6">
        Ready to Start Your Weight Loss Journey?
      </h2>
      <p class="text-xl text-primary-100 mb-8 max-w-2xl mx-auto">
        Book your consultation with our weight management specialist and take the first step towards a healthier you.
      </p>
      <a href="/contact" class="btn-primary text-lg px-8 py-4">
        Book Consultation
      </a>
    </div>
  </section>

  <Footer />
</Layout>

