---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';

const disorders = [
  'Insomnia and sleep onset difficulties',
  'Sleep apnea and breathing disorders',
  'Restless leg syndrome',
  'Circadian rhythm disorders',
  'Sleep-related movement disorders',
  'Parasomnias and sleep behaviors'
];

const treatments = [
  'Comprehensive sleep assessment',
  'Sleep hygiene education',
  'Cognitive behavioral therapy for insomnia',
  'Medication management when appropriate',
  'Lifestyle modifications',
  'Continuous positive airway pressure (CPAP) support'
];
---

<Layout title="Sleep Health" description="Expert diagnosis and treatment of sleep disorders to improve your quality of life and overall health.">
  <Navigation />
  
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-secondary-50 to-secondary-100 section-padding">
    <div class="container-max text-center">
      <h1 class="text-4xl lg:text-6xl font-bold text-neutral-900 mb-6">
        Sleep Health & Disorders
      </h1>
      <p class="text-xl lg:text-2xl text-neutral-600 max-w-4xl mx-auto leading-relaxed">
        Expert diagnosis and treatment of sleep disorders to improve your quality of life 
        and overall health through evidence-based approaches.
      </p>
      <div class="mt-8">
        <a href="/contact" class="btn-secondary text-lg px-8 py-4">
          Book Your Consultation
        </a>
      </div>
    </div>
  </section>

  <!-- Sleep Disorders -->
  <section class="section-padding bg-white">
    <div class="container-max">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-bold text-neutral-900 mb-4">
          Common Sleep Disorders We Treat
        </h2>
        <p class="text-xl text-neutral-600 max-w-3xl mx-auto">
          Comprehensive care for a wide range of sleep-related health issues
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {disorders.map((disorder) => (
          <div class="flex items-start space-x-4">
            <div class="w-8 h-8 bg-secondary-100 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
              <svg class="w-5 h-5 text-secondary-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
            </div>
            <span class="text-lg text-neutral-700">{disorder}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Treatment Options -->
  <section class="section-padding bg-gradient-primary">
    <div class="container-max">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-bold text-neutral-900 mb-4">
          Our Treatment Approach
        </h2>
        <p class="text-xl text-neutral-600 max-w-3xl mx-auto">
          Evidence-based treatments tailored to your specific sleep disorder
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {treatments.map((treatment) => (
          <div class="card">
            <div class="w-16 h-16 bg-secondary-100 rounded-xl flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-neutral-900 mb-3">{treatment}</h3>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section-padding bg-secondary-600">
    <div class="container-max text-center">
      <h2 class="text-3xl lg:text-4xl font-bold text-white mb-6">
        Get Better Sleep Tonight
      </h2>
      <p class="text-xl text-secondary-100 mb-8 max-w-2xl mx-auto">
        Book your consultation with our sleep medicine specialist and start your journey to better sleep.
      </p>
      <a href="/contact" class="btn-accent text-lg px-8 py-4">
        Book Consultation
      </a>
    </div>
  </section>

  <Footer />
</Layout>

