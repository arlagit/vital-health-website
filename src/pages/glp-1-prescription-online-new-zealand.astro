---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

const targetCities = [
  { name: 'Auckland', population: '1.7M', link: '/locations/glp-1-prescription-auckland' },
  { name: 'Wellington', population: '420K', link: '/locations/glp-1-prescription-wellington' },
  { name: 'Christchurch', population: '380K', link: '/locations/glp-1-prescription-christchurch' },
  { name: 'Hamilton', population: '185K', link: '/locations/glp-1-prescription-hamilton' },
  { name: 'Tauranga', population: '160K', link: '/locations/glp-1-prescription-tauranga' },
  { name: 'Dunedin', population: '130K', link: '/locations/glp-1-prescription-dunedin' }
];

const medications = [
  {
    name: 'Wegovy (Semaglutide)',
    strength: '2.4mg weekly',
    cost: '$467-512',
    period: 'per month',
    effectiveness: '12-15% weight loss',
    description: 'The most effective GLP-1 medication for weight loss. Weekly injection with proven results.',
    features: ['FDA approved for weight loss', 'Weekly injection', 'Highest efficacy rate', 'Excellent safety profile']
  },
  {
    name: 'Saxenda (Liraglutide)',
    strength: '3mg daily', 
    cost: '$510-615',
    period: 'per month',
    effectiveness: '5-8% weight loss',
    description: 'Daily GLP-1 injection offering good weight loss results with flexible dosing.',
    features: ['First GLP-1 for weight loss', 'Daily injection', 'Flexible dosing', 'Well-established safety']
  },
  {
    name: 'Ozempic (Semaglutide)',
    strength: '1mg weekly',
    cost: '$130-200',
    period: 'per month', 
    effectiveness: '6-10% weight loss',
    description: 'Originally for diabetes, often prescribed off-label for weight loss at lower cost.',
    features: ['Most affordable option', 'Weekly injection', 'Dual benefit', 'Insurance may cover']
  }
];

const eligibilityChecklist = [
  'BMI ≥30 OR BMI ≥27 with weight-related health conditions',
  'Age 18+ with no contraindications',
  'Previous lifestyle modification attempts',
  'No history of medullary thyroid carcinoma',
  'No personal/family history of MEN2 syndrome',
  'Not currently pregnant or breastfeeding'
];

const process = [
  {
    step: '1',
    title: 'Free Eligibility Check',
    description: 'Complete our online assessment to check if you qualify for GLP-1 treatment',
    time: '5 minutes'
  },
  {
    step: '2', 
    title: 'Doctor Consultation',
    description: 'Video call with MCNZ registered doctor to review your health and goals',
    time: '30-45 minutes'
  },
  {
    step: '3',
    title: 'Get Prescription',
    description: 'Receive your prescription and choose your preferred pharmacy for collection',
    time: 'Same day'
  },
  {
    step: '4',
    title: 'Start Treatment',
    description: 'Begin your GLP-1 treatment with ongoing monitoring and support',
    time: 'Within 24 hours'
  }
];
---

<Layout 
  title="GLP-1 Prescription Online New Zealand - Same Day Service" 
  description="Get GLP-1 prescriptions online in New Zealand. Wegovy, Semaglutide & Saxenda from MCNZ doctors. Same day service, transparent pricing. Start your weight loss journey today."
  image="/blog/glp-1-prescription.jpg"
>
  <Navigation />
  
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-primary-50 to-secondary-50 section-padding">
    <div class="container-max">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <div class="inline-block bg-accent-100 text-accent-800 px-4 py-2 rounded-full text-sm font-semibold mb-6">
            🎯 Same Day Prescription Available
          </div>
          <h1 class="text-4xl lg:text-6xl font-bold text-neutral-900 mb-6 leading-tight">
            GLP-1 Prescription Online 
            <span class="text-gradient">New Zealand</span>
          </h1>
          <p class="text-xl lg:text-2xl text-neutral-600 mb-8 leading-relaxed">
            Get Wegovy, Semaglutide & Saxenda prescriptions from qualified MCNZ doctors. 
            Telehealth consultations available across all of New Zealand.
          </p>
          
          <!-- Key stats -->
          <div class="grid grid-cols-3 gap-4 mb-8">
            <div class="text-center">
              <div class="text-2xl font-bold text-accent-600">500+</div>
              <div class="text-sm text-neutral-600">Patients treated</div>
            </div>
            <div class="text-center">
              <div class="text-2xl font-bold text-accent-600">12-15%</div>
              <div class="text-sm text-neutral-600">Average weight loss</div>
            </div>
            <div class="text-center">
              <div class="text-2xl font-bold text-accent-600">24hrs</div>
              <div class="text-sm text-neutral-600">To start treatment</div>
            </div>
          </div>
          
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="/contact" class="btn-accent text-lg px-8 py-4">
              Book Free Consultation
            </a>
            <a href="#eligibility" class="btn-secondary text-lg px-8 py-4">
              Check Eligibility
            </a>
          </div>
        </div>
        
        <div class="bg-white rounded-2xl p-8 shadow-xl">
          <h3 class="text-2xl font-bold text-neutral-900 mb-6">Why Choose Our Service?</h3>
          <div class="space-y-4">
            <div class="flex items-start space-x-3">
              <svg class="w-6 h-6 text-accent-600 mt-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <div>
                <div class="font-semibold text-neutral-900">MCNZ Registered Doctors</div>
                <div class="text-sm text-neutral-600">Qualified medical professionals with GLP-1 experience</div>
              </div>
            </div>
            <div class="flex items-start space-x-3">
              <svg class="w-6 h-6 text-accent-600 mt-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <div>
                <div class="font-semibold text-neutral-900">Transparent Pricing</div>
                <div class="text-sm text-neutral-600">No hidden fees - know exactly what you'll pay upfront</div>
              </div>
            </div>
            <div class="flex items-start space-x-3">
              <svg class="w-6 h-6 text-accent-600 mt-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <div>
                <div class="font-semibold text-neutral-900">Ongoing Support</div>
                <div class="text-sm text-neutral-600">Monthly check-ins and 24/7 support throughout treatment</div>
              </div>
            </div>
            <div class="flex items-start space-x-3">
              <svg class="w-6 h-6 text-accent-600 mt-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <div>
                <div class="font-semibold text-neutral-900">Nationwide Coverage</div>
                <div class="text-sm text-neutral-600">Available to all New Zealand residents via telehealth</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Available Locations -->
  <section class="section-padding bg-white">
    <div class="container-max">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-bold text-neutral-900 mb-4">
          Available Across New Zealand
        </h2>
        <p class="text-xl text-neutral-600 max-w-3xl mx-auto">
          GLP-1 prescription services available in all major New Zealand cities via secure telehealth consultations
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {targetCities.map((city) => (
          <a href={city.link} class="group">
            <div class="card group-hover:scale-105 transition-transform duration-200">
              <div class="flex items-center justify-between mb-4">
                <h3 class="text-xl font-bold text-neutral-900 group-hover:text-accent-600 transition-colors">
                  {city.name}
                </h3>
                <svg class="w-5 h-5 text-neutral-400 group-hover:text-accent-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </div>
              <div class="text-sm text-neutral-600 mb-3">Population: {city.population}</div>
              <div class="text-sm text-accent-600 font-medium">
                View {city.name} GLP-1 Services →
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Medication Comparison -->
  <section class="section-padding bg-gradient-primary">
    <div class="container-max">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-bold text-neutral-900 mb-4">
          GLP-1 Medications Available
        </h2>
        <p class="text-xl text-neutral-600 max-w-3xl mx-auto">
          Compare all available GLP-1 options with transparent pricing
        </p>
      </div>
      
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        {medications.map((med, index) => (
          <div class={`card ${index === 0 ? 'ring-2 ring-accent-500 bg-accent-50' : ''}`}>
            {index === 0 && (
              <div class="bg-accent-500 text-white text-sm font-semibold px-3 py-1 rounded-full inline-block mb-4">
                Most Popular
              </div>
            )}
            <div class="text-center mb-6">
              <h3 class="text-2xl font-bold text-neutral-900 mb-2">{med.name}</h3>
              <div class="text-sm text-neutral-500 mb-3">{med.strength}</div>
              <div class="text-3xl font-bold text-accent-600">{med.cost}</div>
              <div class="text-sm text-neutral-500">{med.period}</div>
              <div class="text-lg font-semibold text-neutral-900 mt-2">{med.effectiveness}</div>
            </div>
            
            <p class="text-neutral-600 mb-6 leading-relaxed">{med.description}</p>
            
            <ul class="space-y-3 mb-6">
              {med.features.map((feature) => (
                <li class="flex items-start space-x-3">
                  <svg class="w-5 h-5 text-accent-600 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  <span class="text-sm text-neutral-700">{feature}</span>
                </li>
              ))}
            </ul>
            
            <a href="/contact" class={`w-full text-center block py-3 px-6 rounded-lg font-semibold transition-colors duration-200 ${
              index === 0 
                ? 'bg-accent-600 hover:bg-accent-700 text-white' 
                : 'bg-neutral-100 hover:bg-neutral-200 text-neutral-700'
            }`}>
              Get {med.name.split(' ')[0]} Prescription
            </a>
          </div>
        ))}
      </div>
      
      <div class="text-center mt-12">
        <p class="text-neutral-600 mb-4">
          <strong>Consultation Fees:</strong> $149 initial consultation • $75 follow-ups
        </p>
        <p class="text-sm text-neutral-500">
          All prices include needles, sharps disposal, and ongoing support
        </p>
      </div>
    </div>
  </section>

  <!-- Eligibility Section -->
  <section id="eligibility" class="section-padding bg-white">
    <div class="container-max">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl lg:text-4xl font-bold text-neutral-900 mb-6">
            Check Your Eligibility
          </h2>
          <p class="text-xl text-neutral-600 mb-8 leading-relaxed">
            GLP-1 medications are prescription medicines with specific eligibility criteria. 
            Check if you qualify for treatment.
          </p>
          
          <div class="space-y-4">
            {eligibilityChecklist.map((criteria) => (
              <div class="flex items-start space-x-3">
                <div class="w-6 h-6 bg-accent-100 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                  <svg class="w-4 h-4 text-accent-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <span class="text-neutral-700">{criteria}</span>
              </div>
            ))}
          </div>
          
          <div class="mt-8">
            <a href="/contact" class="btn-accent text-lg px-8 py-4">
              Check Your Eligibility
            </a>
          </div>
        </div>
        
        <div class="bg-accent-50 rounded-2xl p-8">
          <h3 class="text-2xl font-bold text-neutral-900 mb-6">Quick Eligibility Check</h3>
          <form class="space-y-4">
            <div>
              <label class="block text-sm font-medium text-neutral-700 mb-2">
                What's your current BMI? (Body Mass Index)
              </label>
              <select class="w-full p-3 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-accent-500 focus:border-accent-500">
                <option>Select your BMI range</option>
                <option>Under 25 (Normal weight)</option>
                <option>25-27 (Overweight)</option>
                <option>27-30 (Overweight with health conditions)</option>
                <option>30-35 (Obese Class I)</option>
                <option>35+ (Obese Class II+)</option>
              </select>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-neutral-700 mb-2">
                Do you have any weight-related health conditions?
              </label>
              <div class="space-y-2">
                <label class="flex items-center">
                  <input type="checkbox" class="rounded border-neutral-300 text-accent-600 focus:ring-accent-500">
                  <span class="ml-2 text-sm text-neutral-700">High blood pressure</span>
                </label>
                <label class="flex items-center">
                  <input type="checkbox" class="rounded border-neutral-300 text-accent-600 focus:ring-accent-500">
                  <span class="ml-2 text-sm text-neutral-700">Type 2 diabetes/prediabetes</span>
                </label>
                <label class="flex items-center">
                  <input type="checkbox" class="rounded border-neutral-300 text-accent-600 focus:ring-accent-500">
                  <span class="ml-2 text-sm text-neutral-700">Sleep apnea</span>
                </label>
                <label class="flex items-center">
                  <input type="checkbox" class="rounded border-neutral-300 text-accent-600 focus:ring-accent-500">
                  <span class="ml-2 text-sm text-neutral-700">High cholesterol</span>
                </label>
              </div>
            </div>
            
            <button type="submit" class="w-full btn-accent py-3">
              Check My Eligibility
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works -->
  <section class="section-padding bg-primary-600">
    <div class="container-max">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-bold text-white mb-4">
          How to Get Your GLP-1 Prescription
        </h2>
        <p class="text-xl text-primary-100 max-w-3xl mx-auto">
          Simple 4-step process to start your weight loss journey with GLP-1 medication
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {process.map((step) => (
          <div class="text-center">
            <div class="w-20 h-20 bg-white rounded-full flex items-center justify-center mx-auto mb-6">
              <span class="text-3xl font-bold text-primary-600">{step.step}</span>
            </div>
            <h3 class="text-xl font-bold text-white mb-3">{step.title}</h3>
            <p class="text-primary-100 mb-3">{step.description}</p>
            <div class="text-sm text-primary-200">⏱️ {step.time}</div>
          </div>
        ))}
      </div>
      
      <div class="text-center mt-12">
        <a href="/contact" class="btn-accent text-lg px-8 py-4">
          Start Your Application
        </a>
        <p class="text-primary-100 mt-4">
          Join 500+ New Zealanders already using our GLP-1 prescription service
        </p>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

