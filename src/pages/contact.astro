---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';


---

<Layout title="Contact & Book Consultation" description="Contact us directly to book your telehealth consultation. We'll be in touch within 24 hours to schedule your appointment.">
  <Navigation />
  
  <!-- Hero Section -->
  <section class="bg-gradient-primary section-padding">
    <div class="container-max text-center">
      <h1 class="text-4xl lg:text-6xl font-bold text-neutral-900 mb-6">
        Contact Us
      </h1>
      <p class="text-xl lg:text-2xl text-neutral-600 max-w-4xl mx-auto leading-relaxed">
        Ready to start your weight loss journey? Contact us directly and we'll help you 
        schedule your consultation with one of our qualified, MCNZ-registered doctors.
      </p>
    </div>
  </section>

  <!-- Direct Contact Section -->
  <section class="section-padding bg-white">
    <div class="container-max">
      <div class="max-w-4xl mx-auto">
        <div class="card text-center">
          <div class="w-24 h-24 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-12 h-12 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </div>
          
          <h2 class="text-3xl font-bold text-neutral-900 mb-6">
            Book Your Consultation
          </h2>
          
          <p class="text-lg text-neutral-600 mb-8 max-w-2xl mx-auto">
            Schedule your consultation with one of our qualified MCNZ-registered doctors. 
            Choose your preferred time and we'll get you started on your weight loss journey.
          </p>
          
          <!-- Placeholder for Indici PMS Booking System -->
          <div class="bg-neutral-100 border-2 border-dashed border-neutral-300 rounded-lg p-8 text-center">
            <div class="w-16 h-16 bg-neutral-200 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-neutral-600 mb-2">Indici PMS Booking System</h3>
            <p class="text-sm text-neutral-500">
              Online booking system will be integrated here
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>



  <!-- CTA Section -->
  <section class="section-padding bg-primary-600">
    <div class="container-max text-center">
      <h2 class="text-3xl lg:text-4xl font-bold text-white mb-6">
        Ready to Start Your Weight Loss Journey?
      </h2>
      <p class="text-xl text-primary-100 mb-8 max-w-2xl mx-auto">
        Use the booking system above to schedule your consultation and take the first step towards sustainable weight loss with our qualified telehealth doctors.
      </p>
    </div>
  </section>

  <Footer />
</Layout>


